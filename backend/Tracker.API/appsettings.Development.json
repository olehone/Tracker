{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TrackerDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtOptions": {
